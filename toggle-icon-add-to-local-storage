// hidden div which will list selected items on click

<div id="mylist" style="display:none;">You liked:</div>

// click on an icon to run a function, 

<i onclick="myFunction(this)" class="fa fa-thumbs-up" style="margin-right: 15px;" id="mytitle"></i>

<script>
const items = []; //set an empty array

function myFunction(x) {

    x.classList.toggle("fa-heart"); //toggle the icon from thumbs up to heart
   
    const text = x.id; //get id of the clicked thumb and put in the items array
    const item = {
      text,
      done: false  };   

    items.unshift(item) //push item to beginning of the array
     
 var mysavedlist = localStorage.setItem('items', JSON.stringify(items)); //put items array in local storage   
   
   mylist = JSON.parse(localStorage.getItem('items'));  // get items from local storage (using parse to convert to format)

   $('#mylist').css('display', 'inline-block').append(items[0].text); // show the hidden div and display first item on the page
    }
</script>
